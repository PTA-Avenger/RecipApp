<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeApp.Pages.RegisterPage"
             Title="Register"
             BackgroundColor="White">

	<VerticalStackLayout Padding="24" Spacing="16" VerticalOptions="CenterAndExpand">
		<Label Text="Create Account"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#257A5A"/>

		<Entry x:Name="UsernameEntry"
               Placeholder="Username"
               BackgroundColor="#F7F7F7"
               TextColor="#222"
               Margin="0,0,0,0"/>

		<Entry x:Name="EmailEntry"
               Placeholder="Email"
               Keyboard="Email"
               BackgroundColor="#F7F7F7"
               TextColor="#222"
               Margin="0,0,0,0"/>

		<Entry x:Name="PasswordEntry"
               Placeholder="Password"
               IsPassword="True"
               BackgroundColor="#F7F7F7"
               TextColor="#222"
               Margin="0,0,0,0"/>

		<Button Text="Register"
                Clicked="OnRegisterClicked"
                BackgroundColor="#6DDE98"
                TextColor="White"
                CornerRadius="10"
                FontSize="18"/>
	</VerticalStackLayout>
</ContentPage>